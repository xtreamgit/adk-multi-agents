steps:
  - name: 'gcr.io/cloud-builders/docker'
    args: ['build', '-t', '${_BACKEND_IMAGE}', '.']
    dir: '.'
images:
  - '${_BACKEND_IMAGE}'
substitutions:
  # Default image path - override with --substitutions during build
  # Example: gcloud builds submit --substitutions=_BACKEND_IMAGE=us-east4-docker.pkg.dev/adk-rag-ma/REPO/backend:TAG
  _BACKEND_IMAGE: 'us-east4-docker.pkg.dev/adk-rag-ma/cloud-run-repo1/backend:latest'
